<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane minHeight="550.0" minWidth="850.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="agh.ics.oop.presenter.SimulationPresenter">
    <top>
    </top>
    <bottom>
    </bottom>
    <center>
        <GridPane fx:id="mapGridPane" alignment="CENTER" gridLinesVisible="true" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </BorderPane.margin>
        </GridPane>
    </center>
    <left>
        <VBox alignment="CENTER">
            <fx:include fx:id="statisticsView" source="statisticsWindow.fxml"/>
        </VBox>
    </left>
    <bottom>
        <HBox alignment="CENTER" spacing="10.0" BorderPane.alignment="TOP_CENTER">
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </padding>
            <Button mnemonicParsing="false" onAction="#onPauseClick">
                <graphic>
                    <ImageView>
                        <Image url="@../textures/pause.png"/>
                    </ImageView>
                </graphic>
            </Button>
            <Button mnemonicParsing="false" onAction="#onPlayClick">
                <graphic>
                    <ImageView>
                        <Image url="@../textures/play.png"/>
                    </ImageView>
                </graphic>
            </Button>
        </HBox>
    </bottom>
</BorderPane>
